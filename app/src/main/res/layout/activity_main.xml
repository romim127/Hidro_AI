<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F172A">

    <ProgressBar
        android:id="@+id/pbWaterFlow"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/circle_progress_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/pbWaterFlow"
        app:layout_constraintEnd_toEndOf="@+id/pbWaterFlow"
        app:layout_constraintStart_toStartOf="@+id/pbWaterFlow"
        app:layout_constraintTop_toTopOf="@+id/pbWaterFlow">

        <TextView
            android:id="@+id/tvLitersCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_0_0"
            android:textColor="#FFFFFF"
            android:textSize="48sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/litros"
            android:textColor="#38BDF8"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvStatusHardware"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/estado_esperando_pulso"
        android:textColor="#34D399"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_gravity="center_horizontal"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>